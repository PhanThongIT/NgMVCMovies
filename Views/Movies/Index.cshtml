
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/app/app.module.js"></script>
<script src="~/Scripts/app/services/movies/movies.services.js"></script>
<script src="~/Scripts/app/controllers/movies/list-movies.controller.js"></script>


<div class="container" ng-controller="moviesController" ng-init="getListMovies()">
    <div class="row page-header" style="width:100%">
        <div class="col-sm-6">
            <div class="row">
                <a href="/Movies/Create" class="btn btn-success">
                    <i class="glyphicon glyphicon-plus"></i>
                    New Movie
                </a>
            </div>
        </div>
        <div class="col-sm-6"></div>
    </div>

    <div class="main">
        <div>
            <div class="container">
                <h4>List Movies</h4>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Title</th>
                            <th scope="col">Release Time</th>
                            <th scope="col">Genre</th>
                            <th scope="col">Price</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="(index, movie) in listMovies">
                            <th scope="row">
                                {{index +1}}
                            </th>
                            <td>{{movie.Title}}</td>
                            <td>
                                {{movie.ReleaseTime | date: 'dd/MMMM/yyyy hh:mm:ss'}}
                            </td>
                            <td>{{movie.Genre}}</td>
                            <td>{{movie.Price}}</td>
                            <td class="row">

                                <a class="btn btn-warning" href="/Movies/Details?ID={{movie.ID}}">Edit</a>

                                <a class="btn btn-success" href="/Movies/Details?ID={{movie.ID}}">Detail</a>

                                <a class="btn btn-danger" ng-click="deleteMovie(movie.ID)">Delete</a>

                            </td>
                        </tr>

                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>





